<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %><br>
    </p>
    
    <p>
      <%= f.label :date %><br>
      <%= f.text_field :date %><br>
    </p>

    <p>
      <%= f.label :time %><br>
      <%= f.text_field :time %><br>
    </p>

    <p>
      <%= f.label :location %><br>
      <%= f.text_field :location %><br>
    </p>
    
    <p>
      <%= f.submit %>
    </p>
  <% end %>